<div class="mx-auto" style="width: 30em;">
  <div class="card shadow">
    <div class="card-header text-center ">
      <h2>Inicio de Sesión</h2>
    </div>

    <br/>
    
    <div class="card-body pb-2">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="text-center">  
          <div class="field form-group shadow-sm">
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder:"Email" %>
          </div>
        
          <br/>
        
          <div class="field form-group shadow-sm">
            <%= f.password_field :password, class:"form-control", placeholder:"Contraseña", autocomplete: "current-password" %>
          </div>
        </div>
        <br/>
        
        <div>
          <% if devise_mapping.rememberable? %>
            <div class="field form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :Recordar_mis_datos %>
            </div>
          <% end %>
        </div>

      
        <div class="text-center pb-1">
          <div class="actions pb-2" >
            <%= f.submit "Acceder", class:"btn btn-secondary" %>
          </div>

          <%= render "devise/shared/links" %>
        </div>

      <% end %>  
    
    </div>

  </div>
</div>



