<div class="mx-auto" style="width: 30em;">
  <div class="card shadow text-center ">
    <div class="card-header">
      <h2>Forgot your password?</h2>
    </div>

    <br/>
    
    <div class="card-body pb-2">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field form-group">
          <%= f.email_field :email, class:"form-control", placeholder:"Email de la cuenta", autofocus: true, autocomplete: "email" %>
        </div>
      
        <br/>
      
        <div class="text-center pb-1">
          <div class="actions pb-2" >
            <%= f.submit "Enviar instrucciones", class:"btn btn-secondary" %>
          </div>

          <%= render "devise/shared/links" %>
        </div>

      <% end %> 

    </div>

  </div>
</div>




